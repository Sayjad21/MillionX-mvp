# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Faust Configuration
FAUST_STORE=rocksdb://
FAUST_WEB_ENABLED=true
FAUST_WEB_PORT=6066
FAUST_STREAM_BUFFER_MAXSIZE=4096
FAUST_PRODUCER_ACKS=-1
FAUST_PRODUCER_COMPRESSION=gzip

# Privacy Shield Settings
# IMPORTANT: Change this in production!
PRIVACY_SALT=CHANGE_THIS_IN_PRODUCTION_USE_SECRETS_MANAGER
PII_HASH_LENGTH=16

# Redis Configuration (for Context Enrichment)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Uncomment if Redis has password

# Weather API (OpenWeatherMap)
# Get free API key: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather

# Embedding Service Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=100
EMBEDDING_MAX_LENGTH=512
EMBEDDING_DEVICE=cpu  # Use 'cuda' if GPU is available

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8082
# WEAVIATE_API_KEY=  # Uncomment if Weaviate requires authentication

# Logging
LOG_LEVEL=INFO
