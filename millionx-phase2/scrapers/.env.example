# Example .env file for scraper configuration
# Copy to .env and fill in your actual credentials

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_COMPRESSION=gzip

# Proxy Configuration (comma-separated)
# Example: http://user:pass@proxy1.com:8080,http://user:pass@proxy2.com:8080
PROXY_LIST=

# Scraping Behavior
MIN_SCRAPE_DELAY=3
MAX_SCRAPE_DELAY=8
MAX_RETRIES=3
PAGE_TIMEOUT_MS=30000

# Apify Fallback (optional)
USE_APIFY=false
APIFY_TOKEN=

# TikTok Configuration
TIKTOK_KEYWORDS=smartphone,laptop,electronics,fashion,shoes,makeup,gadgets
TIKTOK_MAX_POSTS=50

# Facebook Configuration
FACEBOOK_PAGE_IDS=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Shopify Configuration
SHOPIFY_SHOP_URL=
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_API_VERSION=2024-01

# Daraz Configuration
DARAZ_APP_KEY=
DARAZ_APP_SECRET=
DARAZ_API_URL=https://api.daraz.com.bd/rest

# Logging
LOG_LEVEL=INFO
